doctype html

html
    head
        title RCJ
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="shortcut icon", href="/img/logo.png", type="image/x-icon")
        script(src="/js/jquery-3.5.1.min.js")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/css/rcj/layout.css')
        link(rel='stylesheet', href='/css/rcj/form.css')
        block styles
    body
        .api-panel
            .sidebar 
                .devices
                    h1.title آپلود برنامه
                    .links#devices-area
                        block devices
                .navigation 
                    h1.title فایل های آپلود شده
                    .links
                        -for(var i=0; i<teamCode; i++)
                            a(href="#{teamCode}" download) کد شماره #{i}

            .container 
                block content