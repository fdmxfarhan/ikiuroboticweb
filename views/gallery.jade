doctype html

html
    head
        title IKIU Robotics
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="shortcut icon", href="/img/robot.png", type="image/x-icon")
        script(src="/js/jquery-3.5.1.min.js")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/css/home.css')
        link(rel='stylesheet', href='/css/gallery.css')
    
    body
        .black-modal
        nav 
            #nav-collapse-button
                i.fa.fa-bars
            #nav-collapse-view 
                a.active(href="/") Home 
                a(href="#more-about-me") About
                a(href="#members") Members
                a(href="/publication") Publications
                a(href="/gallery") Gallery
                a(href="#") Contact
            .languages 
                .lang#farsi FA 
                .lang#english.active EN
        section 
            .gallery
                .images-area
                    -for(var i=1; i<=5; i++){
                        -if(i < 10)
                            img(src="/img/gallery/0#{i}.jpg" id="img#{i}")
                        -else
                            img(src="/img/gallery/#{i}.jpg" id="img#{i}")
                    -}
                -for(var i=1; i<=5; i++){
                    .preview(id=`preview${i}`)
                        .preview-content
                            span.close#closebtn &times;
                            -if(i < 10)
                                img(src="/img/gallery/0#{i}.jpg" id="img#{i}")
                            -else
                                img(src="/img/gallery/#{i}.jpg" id="img#{i}")
                -}
            script(src="/js/gallery.js")
        include ./components/footer
        //- https://mattfarley.ca/
        script(src="/js/home.js") 
        script(src="/js/graph.js") 